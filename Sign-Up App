    w="Sign Up Sucessful "+entry.get()
    label_2.configure(text=w)
button=tk.Button(window, text="Submit", command=function, fg="RED", bg="BLACK")
button.pack()
label_2=tk.Label(window, text="", fg="RED")
label_2.pack()
